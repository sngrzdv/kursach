<Page x:Class="kursach.Pages.Autoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kursach.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Авторизация" 
      Background="#FF4f4843">

    <Grid>
        <!-- Карточка авторизации с тенью -->
        <Border Background="#FF9e948d" CornerRadius="12" 
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Width="380" Padding="40"
                BorderBrush="#FF4f4843" BorderThickness="1"
                Effect="{StaticResource ShadowEffect}">

            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="Вход в систему" 
                           FontSize="26" FontWeight="SemiBold" 
                           Foreground="Black"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <!-- Поле Email -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Email" 
                               FontSize="14" 
                               Foreground="#FF4f4843" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="tbLogin" 
                             Background="#FFe6e3e1"
                             BorderBrush="#FF9e948d"
                             FontSize="14" 
                             Padding="10" 
                             Height="42"/>
                </StackPanel>

                <!-- Поле Пароля -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Пароль" 
                               FontSize="14" 
                               Foreground="#FF4f4843" 
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="pbPassword" 
                                 Background="#FFe6e3e1"
                                 BorderBrush="#FF9e948d"
                                 FontSize="14" 
                                 Padding="10" 
                                 Height="42"/>
                </StackPanel>

                <!-- Кнопка Войти с эффектом наведения -->
                <Button Content="Войти" 
                        Height="48" 
                        FontSize="16" 
                        FontWeight="SemiBold"
                        Background="#FF4f4843" 
                        Foreground="#FFe6e3e1"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Login_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF4f4843"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF3a3633"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Ссылка на регистрацию -->
                <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Run Text="Нет аккаунта? " Foreground="Black"/>
                    <Hyperlink Click="Register_Click" 
                               Foreground="#FFe6e3e1" 
                               FontWeight="SemiBold">
                        Зарегистрироваться
                    </Hyperlink>
                </TextBlock>

                <!-- Блок ошибок с анимацией -->
                <Border x:Name="errorBorder" 
                        Background="#FFe6e3e1" 
                        CornerRadius="4" 
                        Margin="0,20,0,0" 
                        Padding="12" 
                        Visibility="Collapsed"
                        BorderBrush="#FF9e948d"
                        BorderThickness="1">
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Border.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0" To="1" Duration="0:0:0.3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="!" 
                                   Foreground="#D32F2F" 
                                   FontWeight="Bold" 
                                   Margin="0,0,8,0"/>
                        <TextBlock x:Name="tbError" 
                                   Foreground="#D32F2F" 
                                   TextWrapping="Wrap" 
                                   FontSize="14" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>