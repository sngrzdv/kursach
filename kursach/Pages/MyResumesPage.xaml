<Page x:Class="kursach.Pages.MyResumesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kursach.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Мои резюме"
      Background="#FF4f4843">

    <Page.Resources>
        <Style x:Key="ResumeItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFe6e3e1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderBrush" Value="#FF4f4843"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="15"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFb8b0a9"/>
                    <Setter Property="BorderBrush" Value="#0078D7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4f4843"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF5a524d"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка создания -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,10">
            <Button x:Name="BackButton"
        Content="Назад"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="10"
        Padding="10,5"
        FontSize="14"
        Click="BackButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4"/>
                            <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="5">
                                <Path Data="M10,20 L0,10 L10,0"
                          Stroke="{TemplateBinding Foreground}"
                          StrokeThickness="2"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="0,0,5,0"/>
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <TextBlock Text="Мои резюме" FontSize="25" FontWeight="Bold" Foreground="#FFe6e3e1"/>
            <Button x:Name="CreateResumeButton" Content="+ Создать резюме" Padding="15,8" Margin="15,0,0,0" 
                    Background="#FF9e948d" Foreground="Black" FontSize="14" FontWeight="SemiBold"
                    Click="CreateResumeButton_Click"/>
        </StackPanel>

        <!-- Список резюме -->
        <ScrollViewer Grid.Row="1" Margin="15,0,15,15">
            <ItemsControl x:Name="ResumesItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ResumeItemStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding SalaryExpectation, StringFormat={}{0:N0} руб.}" FontWeight="SemiBold"/>
                                        <TextBlock Text=" • " Foreground="#FF9e948d"/>
                                        <TextBlock Text="{Binding Cities.Name, FallbackValue='Город не указан'}"/>
                                        <TextBlock Text=" • " Foreground="#FF9e948d"/>
                                        <TextBlock Text="{Binding EmploymentTypes.Name, FallbackValue='Тип занятости не указан'}"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding AboutMe}" Margin="0,5,0,0" TextWrapping="Wrap" MaxHeight="60" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <Button Content="Изменить" Style="{StaticResource ActionButtonStyle}" 
                                            Tag="{Binding Id}" Click="EditResumeButton_Click"/>
                                    <Button Content="Удалить" Style="{StaticResource ActionButtonStyle}" 
                                            Tag="{Binding Id}" Click="DeleteResumeButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>