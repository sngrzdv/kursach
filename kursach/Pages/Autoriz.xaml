<Page x:Class="kursach.Pages.Autoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kursach.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Авторизация" 
      Background="#FFFAFAFA">

    <Grid>
        <!-- Основная карточка авторизации -->
        <Border Background="White" CornerRadius="12" 
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Width="380" Padding="40"
                BorderBrush="#E0E0E0" BorderThickness="1"
                Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <TextBlock Text="Вход в систему" 
                           FontSize="26" FontWeight="SemiBold" 
                           Foreground="#333333"
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <!-- Поле логина -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Логин" FontSize="14" Foreground="#555555" Margin="0,0,0,5"/>
                    <TextBox x:Name="tbLogin" Style="{StaticResource ModernTextBox}" 
                             FontSize="14" Padding="10" Height="42"/>
                </StackPanel>

                <!-- Поле пароля -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Пароль" FontSize="14" Foreground="#555555" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="pbPassword" Style="{StaticResource ModernPasswordBox}" 
                                FontSize="14" Padding="10" Height="42"/>
                </StackPanel>

                <!-- Кнопка входа -->
                <Button Content="Войти" Style="{StaticResource PrimaryButton}"
                        Height="48" FontSize="16" FontWeight="SemiBold"
                        Click="Login_Click"/>

                <!-- Ссылка на регистрацию -->
                <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Run Text="Нет аккаунта? " Foreground="#666666"/>
                    <Hyperlink Click="Register_Click" Foreground="#0078D7" FontWeight="SemiBold">
                        Зарегистрироваться
                    </Hyperlink>
                </TextBlock>

                <!-- Блок ошибок -->
                <Border x:Name="errorBorder" Background="#FFF5F5F5" CornerRadius="4" 
                        Margin="0,20,0,0" Padding="12" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" 
                               Fill="#D32F2F" Stretch="Uniform" Width="20" Height="20" Margin="0,0,8,0"/>
                        <TextBlock x:Name="tbError" Foreground="#D32F2F" TextWrapping="Wrap" 
                                   FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>